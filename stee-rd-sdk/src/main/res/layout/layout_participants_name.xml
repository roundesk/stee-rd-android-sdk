<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/relLay2ParticipantsName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtInitialViewParticipant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:actionBarSize"
            android:background="@color/black"
            android:padding="@dimen/dimen_10dp"
            android:text="Initial Participant 1"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="@dimen/dimen_144dp"
            android:layout_height="@dimen/dimen_170dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp">

            <TextView
                android:id="@+id/txtInitialViewParticipant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:text="Initial Participant 2"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14sp"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linLayMultipleParticipantsName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/relLayNames12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtParticipant1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/dividerView1"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:text="Participant 1"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

            <View
                android:id="@+id/dividerView1"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtParticipant2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:text="Participant 2"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayNames34"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtParticipant3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/dividerView2"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:text="Participant 3"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:visibility="gone" />

            <View
                android:id="@+id/dividerView2"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtParticipant4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:text="Participant 4"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayNames5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtParticipant5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/black"
                android:padding="@dimen/dimen_10dp"
                android:text="Participant 5"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>